
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  moodEntries MoodEntry[]
  chats       Chat[]
  journalEntries JournalEntry[]
}

model MoodEntry {
  id        Int      @id @default(autoincrement())
  mood      String
  sentiment String
  timestamp DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Chat {
  id        Int      @id @default(autoincrement())
  messages  String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model JournalEntry {
  id             Int      @id @default(autoincrement())
  text           String
  sentiment      String
  sentimentScore Float
  createdAt      DateTime @default(now())
  userId         Int
  user           User     @relation(fields: [userId], references: [id])
}
